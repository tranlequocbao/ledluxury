<div class="top" style="height:20%">
    <span class="tieude" style="font-size:13px">THÔNG TIN SẢN XUẤT THACO KIA</span>
    <span class="xuong" style="font-size:12px;text-align:right">XƯỞNG LẮP RÁP</span><span class="xuong" style="font-size:14px;color:yellow;text-align:left">(CHASSIS)</span>
    <span class="thoigian">
        <span id="ngay"></span><span>/</span><span id="thang"></span><span>/</span><span id="nam"></span>
        <span id="gio"></span><span>:</span><span id="phut"></span><span>:</span><span id="giay"></span><span></span>
    </span>
</div>

<div class="content">
    <table style="    border: none;">
        <thead style="    /* border: none; */">
            <tr style="    /* border: none; */">
                <th style="border-left: none;border-top: none;width:50%;">LOẠI XE</th>
                <th style="border-right: none;border-top: none;width:50%;text-align:center;">SỐ LƯỢNG</th>
            </tr>
        </thead>
    </table>


    <div style="overflow: hidden;height: 110px;">
        @if ((ViewBag.vv).Count > 4)
        {
            <marquee direction="up" scrollamount="4" style="height:112px">
                <table>
                    <tbody style="    border-left: hidden;    border-right: hidden;">
                        @foreach (var item in ViewBag.vv)
                        {
                            <tr>
                                <td style="width:50%; font-size:20px">@item.CarName</td>
                                <td style="text-align: center;font-size: 20px;width: 50%; color:lawngreen">@item.SoLuong</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </marquee>
        }

        @if ((ViewBag.vv).Count == 1)
        {
            <table style="border:hidden;height: 110px;">
                <tbody>
                    @foreach (var item in ViewBag.vv)
                    {
                        <tr>
                            <td style="width: 50%;    height: 100PX;    font-size: 30PX;"> @item.CarName</td>
                            <td style=" text-align: center; width: 50%; height: 100%; font-size: 30px; color:lawngreen">@item.SoLuong</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        @if ((ViewBag.vv).Count == 2)
        {
            <table style="border:hidden;">
                <tbody>
                    @foreach (var item in ViewBag.vv)
                    {
                        <tr>
                            <td style="width:50%; height:52px; font-size:24PX">@item.CarName</td>
                            <td style=" text-align: center; width: 50%; height: 100%; font-size: 24PX; color:lawngreen">@item.SoLuong</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        @if ((ViewBag.vv).Count == 3)
        {
            <table style="border:hidden;">
                <tbody>
                    @foreach (var item in ViewBag.vv)
                    {
                        <tr>
                            <td style="width:50%;height:33px; font-size:20px">@item.CarName</td>
                            <td style=" text-align: center;height:33px; width: 50%; font-size:20px; color:lawngreen">@item.SoLuong</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        @if ((ViewBag.vv).Count == 4)
        {
            <table style="border:hidden;">
                <tbody>
                    @foreach (var item in ViewBag.vv)
                    {
                        <tr>
                            <td style="width:50%; height:24px; font-size:20PX">@item.CarName</td>
                            <td style=" text-align: center; width: 50%; height: 24px; font-size: 17PX; color:lawngreen">@item.SoLuong</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>

<div class="wrapper">
    <table>
        <thead>
            <tr>
                <th style="width:20%; height:27px"></th>
                <th style="width:40%; color:lawngreen">NGÀY</th>
                <th style="width:40%; color:lawngreen">THÁNG</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="color:lawngreen">THỰC HIỆN</td>
                <td style="color:red;    font-size: 37px;">@ViewBag.thnn</td>
                <td style=" color:red;    font-size: 37px;">@ViewBag.thtt</td>
            </tr>
            <tr>
                <td style="color:lawngreen">KẾ HOẠCH</td>
                <td style=" color:lawngreen;    font-size: 37px;">@ViewBag.khnn</td>
                <td style=" color:lawngreen;    font-size: 37px;">@ViewBag.khtt</td>
            </tr>
        </tbody>
    </table>
</div>

